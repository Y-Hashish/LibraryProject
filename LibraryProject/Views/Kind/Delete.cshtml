
@{
    ViewData["Title"] = "Delete";
}
@model KindVM

<div class="border-0 card shadow my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Delete Kind</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Delete">
            <input asp-for="Id" class="d-none"/>
            <div class="mb-3 row p-1">
                <label class="p-0">Kind Name</label>
                <input type="text" class="form-control" asp-for="@Model.Name"readonly />
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Delete</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Kind" asp-action="index" class="btn btn-secondary border form-control">
                        Back to List
                    </a>

                </div>
            </div>
        </form>

    </div>
</div>
@section Scripts{
    @{
        <partial name="_ValidationScriptsPartial.cshtml" />
    }
}


