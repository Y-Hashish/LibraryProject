@model List<KindVM>
<div class="container">
    <div class="row pt-4 pb-3 ">
        <div class="col-6">
            <h2 class="text-primary">
                Kind List
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="Create" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create New Kind</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>
                Kind Name
            </th>

            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        { if (item != null)
            {
                <tr>
                    <td>@item.Name</td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" class="btn btn-primary mx-2" asp-route-Id="@item.Id">
                              <i class="bi bi-pencil-square"></i>Edit
                        </a>
                        <a asp-action="Delete" class="btn btn-danger mx-2" asp-route-Id="@item.Id">
                            <i class="bi bi-trash-fill"></i>Delete
                        </a>
                    </div>
                </td>
              
            </tr>
            }
        }
    </tbody>

</table>
