<div class="border-0 card shadow my-4">
    <div class="card-header bg-secondary bg-gradient ml-0 py-3">
        <div class="row">
            <div class="col-12 text-center">
                <h2 class="text-white py-2">Login</h2>
            </div>
        </div>
    </div>
    <div class="card-body p-4">
        <form asp-action="Login">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3 row p-1">
                <label class="p-0">User Name</label>
                <input type="text" class="form-control" asp-for="@Model.name" />
                <span class="text-danger" asp-validation-for="@Model.name"></span>
            </div>
            <div class="mb-3 row p-1">
                <label class="p-0">Password</label>
                <input  class="form-control" asp-for="password" />
                <span class="text-danger" asp-validation-for="@Model.password"></span>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="rememberMe" /> @Html.DisplayNameFor(model => model.rememberMe)
                </label>
            </div>
            <div class="row">
                <div class="col-6 col-md-3">
                    <button type="submit" class="btn btn-primary form-control">Login</button>
                </div>
                <div class="col-6 col-md-3">
                    <a asp-controller="Account" asp-action="Register" class="btn btn-secondary border form-control">
                        Create Account 
                    </a>

                </div>
            </div>

        </form>
    </div>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
