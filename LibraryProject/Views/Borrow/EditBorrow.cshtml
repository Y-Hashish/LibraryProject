@model Borrowing
@{
    ViewData["Title"] = "EditBorrow";
    SelectList BookOptions = new SelectList(ViewBag.Books, "Id", "Title");
    SelectList UserOptions = new SelectList(ViewBag.Users, "Id", "UserName");
}

<h1>EditBorrow</h1>

<form method="post" asp-action="SaveEdit" asp-controller="Borrow" asp-route-id="@Model.Id">
    <div>
        @*  <label asp-for="BookId"></label>
        <input class="form-check form-control" asp-for="BookId" /> *@
        <label asp-for="BookId"></label>
        <select class="form form-control"
                asp-for="BookId"
                asp-items="BookOptions">
            <option value="0">---Select Book---</option>
        </select>
    </div>

    <div>
        @* <label asp-for="ApplicationUserId"></label>
        <input class="form-check form-control" asp-for="ApplicationUserId" /> *@
        <label asp-for="ApplicationUserId"></label>
        <select class="form form-control"
                asp-for="ApplicationUserId"
                asp-items="UserOptions">
            <option value="0">---Select User---</option>
        </select>
    </div>

    <div>
        <label asp-for="BorrowingDate"></label>
        <input class="form-check form-control" asp-for="BorrowingDate" />
    </div>

    <div>
        <label asp-for="DueDate"></label>
        <input class="form-check form-control" asp-for="DueDate" />
    </div>

    <div>
        <label asp-for="ActualReturnDate"></label>
        <input class="form-check form-control" asp-for="ActualReturnDate" />
    </div>

    <div>
        <label asp-for="PenalityAmount"></label>
        <input class="form-check form-control" asp-for="PenalityAmount" />
    </div>

    <input type="submit" value="Save-Edits" class="btn btn-success" />


</form>
<a asp-action="AllBorrowings" asp-controller="Borrow">Back</a>
