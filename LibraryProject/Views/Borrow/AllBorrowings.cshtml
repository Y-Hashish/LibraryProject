@model List<Borrowing>
@{
    ViewData["Title"] = "AllBorrowings";
}

<div class="container">
    <div class="row pt-4 pb-3 ">
        <div class="col-6">
            <h2 class="text-primary">
                All Borroings
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-action="CreateBorrow" asp-controller="Borrow" class="btn btn-primary"><i class="bi bi-plus-circle"></i>Create Borrow</a>
        </div>

    </div>
</div>
<table class="table table-bordered table-hover">
    <tr>
        <th>BorrowId</th>
        <th>BookId</th>
        <th>UserName</th>
        <th>Borrowing-Date</th>
        <th>DueDate</th>
        <th>ActualReturnDate</th>
        <th>Penality</th>
        <th colspan="2">Actions</th>
    </tr>

    @foreach(var item in Model)
    {
        <tr>
            <td>@item.Id</td>
            <td>@item.BookId</td>
            <td>@item.ApplicationUser.UserName</td>
            <td>@item.BorrowingDate</td>
            <td>@item.DueDate</td>
            <td>@item.ActualReturnDate</td>
            <td>@item.PenalityAmount</td>
            <td>
                <a href="/Borrow/EditBorrow/@item.Id" class="btn btn-primary mx-2"><i class="bi bi-pencil-square"></i>Edit</a>
            </td>
            <td>

                <a href="/Borrow/DeleteBorrow/@item.Id" class="btn btn-danger mx-2"><i class="bi bi-trash-fill"></i>Delete</a>
            </td>
                 @* <button type="submit" class="btn btn-danger">Delete</button> *@
        </tr>
    }
</table>
