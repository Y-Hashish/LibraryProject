@model Book 
@{
	ViewData["Title"] = "Edit";

 }

 <form action="/Book/SaveEdit/@Model.Id" method="post">
	 <div>
        <label>Id</label>
		<input id="Id" name="Id" value="@Model.Id" class="form form-control" />
	</div>
	<div>
		<label>Title</label>
		<input id="Title" name="Title" value="@Model.Title" class="form form-control" />
	</div>
		<label>Auther</label>
		<input id="Author" name="Author" value="@Model.Author" class="form form-control" />
		<div>
		<label>StatusId</label>
		<input id="StatusId" name="StatusId" value="@Model.StatusId" class="form form-control" />
	</div>
		<input type="submit" action="save" class="btn btn-success"/>
	 
 </form>